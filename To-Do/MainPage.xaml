<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:To_Do" 
             x:Class="To_Do.MainPage">

    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <!-- define grid dimensions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- note icon in top bar -->
        <Image Source="note.png"
               Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
               BackgroundColor="LightPink"/>
        
        <!-- to-do/done ratio in top bar -->
        <!-- <Label Text="{Binding AllDone.Count}"
               Grid.Row="0"
               Grid.Column="1">
        </Label> -->

        <!-- to-do note editor box -->
        <Editor Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                Placeholder="What do you need to do? ✍️ "
                Margin="10,10"
                Text="{Binding TheToDo}"/> <!-- Bound to TheToDo method -->

        <!-- save to-do button -->
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                Text="Save"
                TextColor="DarkGreen"
                BackgroundColor="PaleGreen"
                Command="{Binding SaveCommand}"/>

        <Button Text="Mark Done"
                Command="{Binding MarkDoneCommand}"
                Grid.Row="4"
                Grid.ColumnSpan="2"/>
        
        <!-- ListView - scrollable list to display everything -->
        <!-- bind to List of all to-do notes -->
        <ListView x:Name="listOfToDos" Margin="20"
                  ItemsSource="{Binding AllToDos}"
                  Grid.Row="3" Grid.ColumnSpan="2"
                  SelectedItem="{Binding SelectedToDo}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding .}"/>
                        </StackLayout>    
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>

    </Grid>
    
</ContentPage>
